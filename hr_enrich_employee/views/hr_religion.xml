<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_religion_view_form" model="ir.ui.view">
        <field name="name">hr_religion_view_form</field>
        <field name="model">hr.religion</field>
        <field name="arch" type="xml">
            <form string="hr_religion_form">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="hr_religion_view_tree" model="ir.ui.view">
        <field name="name">hr_religion_view_tree</field>
        <field name="model">hr.religion</field>
        <field name="arch" type="xml">
            <list string="hr_religion_tree" edit="1" delete="0" create="1" editable="bottom">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="hr_religion_action" model="ir.actions.act_window">
        <field name="name">Religion</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.religion</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>